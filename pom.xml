     ####################################################################### -->
    <groupId>com.github.ayoung012</groupId>
    <artifactId>sarl-base</artifactId>
    <version>0.1</version>

	<name>SARL Base Project</name>
    <description>
	    This is a base template to build SARL controllers.
    </description>
  	<url>https://github.com/ayoung012/sarl-base</url>

    <licenses>
